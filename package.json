{
    "name": "nobox-api",
    "version": "0.0.1",
    "description": "Nobox API",
    "author": "Jegede Akintunde <jegedeakintunde@gmail.com>",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "npm": ">=8.1.0",
        "node": ">=16.13.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "setup": "sudo chmod u+x ./setup.sh && ./setup.sh",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=dev nest start",
        "pm2:start:debug": "pm2 start 'npm run start:debug' --name api-dev -i max",
        "start:prod:reload": "npm install && npm run build && npm run start:prod",
        "start:debug": "NODE_ENV=local nest start --debug --watch",
        "pm2:start:prod": "pm2 start 'NODE_ENV=dev npm run deploy' --name nobox:graphql-api",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "deploy": "npm ci && npm run build && node dist/main.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/apollo": "^10.0.13",
        "@nestjs/common": "^8.4.5",
        "@nestjs/config": "^2.0.1",
        "@nestjs/core": "^8.4.5",
        "@nestjs/graphql": "^10.0.13",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.4.5",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/serve-static": "^2.1.3",
        "@nestjs/swagger": "^4.6.0",
        "@types/bcrypt": "^3.0.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/koa": "^2.13.4",
        "apollo-server-express": "^3.8.1",
        "apollo-upload-server": "^3.0.0",
        "argon2-ffi": "^2.0.0",
        "axios": "^0.27.2",
        "bcrypt": "^5.1.0",
        "chalk": "^4.1.2",
        "circular-json": "^0.5.9",
        "class-transformer": "^0.3.1",
        "class-transformer-validator": "^0.9.1",
        "class-validator": "^0.13.2",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "firebase-admin": "^11.0.0",
        "fnv-plus": "^1.3.1",
        "fs-capacitor": "^7.0.1",
        "graphql": "^16.5.0",
        "graphql-upload-minimal": "^1.5.4",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.13.4",
        "lodash": "^4.17.21",
        "mailgun-js": "^0.22.0",
        "messagebird": "^3.7.2",
        "minio": "^7.0.16",
        "moment": "^2.29.3",
        "mongodb": "^4.13.0",
        "nestjs-minio-client": "^1.0.6",
        "newrelic": "^9.7.5",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "postmark": "^2.8.1",
        "redis": "^4.5.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.5",
        "swagger-ui-express": "^4.1.4",
        "ts-mailgun": "^0.4.3",
        "twilio": "^3.74.0",
        "util": "^0.12.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@apollo/gateway": "^2.0.3",
        "@nestjs/cli": "^8.2.6",
        "@nestjs/testing": "^8.4.5",
        "@types/express": "^4.17.3",
        "@types/fnv-plus": "^1.3.0",
        "@types/jest": "26.0.10",
        "@types/lodash": "^4.14.190",
        "@types/minio": "^7.0.6",
        "@types/node": "^18.11.12",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.8c",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "26.4.2",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-morph": "^15.0.0",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "4.8"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
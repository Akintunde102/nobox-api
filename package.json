{
    "name": "nobox-core",
    "version": "0.0.1",
    "description": "Nobox Core",
    "author": "Jegede Akintunde <jegedeakintunde@gmail.com>",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "npm": ">=8.1.0",
        "node": ">=16.13.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "lint:fix": "eslint --fix --ext .ts,.tsx .",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "NODE_ENV=dev nest start",
        "pm2:start:debug": "pm2 start ecosystem.config.js",
        "dev": "NODE_ENV=local nest start --debug --watch",
        "pm2:start:prod": "pm2 start 'NODE_ENV=dev npm run deploy' --name nobox-core",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "deploy": "npm run build && node dist/main.js",
        "test": "NODE_ENV=dev jest",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
    },
    "dependencies": {
        "@nestjs/common": "^9.4.0",
        "@nestjs/config": "^2.0.1",
        "@nestjs/core": "^9.4.3",
        "@nestjs/platform-express": "^9.4.0",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/serve-static": "^2.1.3",
        "@nestjs/swagger": "^6.3.0",
        "@nobox-org/shared-lib": "^1.0.17",
        "@node-rs/argon2": "^1.4.0",
        "@redis/client": "^1.5.11",
        "@sentry/node": "^5.30.0",
        "@types/jsonwebtoken": "^8.5.0",
        "axios": "^0.27.2",
        "chalk": "^4.1.2",
        "class-transformer": "^0.3.1",
        "class-transformer-validator": "^0.9.1",
        "class-validator": "^0.14.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "fcm-notification": "^2.0.0",
        "firebase-admin": "^11.7.0",
        "fnv-plus": "^1.3.1",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "mongodb": "^6.1.0",
        "perf_hooks": "^0.0.1",
        "postmark": "^3.0.18",
        "query-string": "6.0",
        "redis": "^4.5.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.5",
        "swagger-ui-express": "^4.1.4",
        "util": "^0.12.5",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.4.0",
        "@nestjs/testing": "^9.4.2",
        "@types/express": "^4.17.3",
        "@types/fnv-plus": "^1.3.0",
        "@types/jest": "26.0.10",
        "@types/lodash": "^4.14.190",
        "@types/node": "^18.17.19",
        "@types/supertest": "^2.0.8c",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "26.0",
        "pre-commit": "^1.2.2",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^9.4.3",
        "ts-morph": "^15.0.0",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "4.8"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "pre-commit": [
        "precommit-msg",
        "lint:fix",
        "test",
        "build"
    ]
}
